{
  "name": "Test Démo Freestyle",
  "description": "Scénario de test pour valider le mode Freestyle AI",
  "campaign_objective": "appointment",
  "steps": {
    "hello": {
      "message_text": "Allô, bonjour {{first_name}}. Je suis Julie de TechCorp.",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "barge_in": true,
      "timeout": 15,
      "intent_mapping": {
        "affirm": "question1",
        "question": "freestyle_answer",
        "deny": "retry",
        "*": "retry"
      }
    },
    "retry": {
      "message_text": "Je comprends. C'est vraiment très rapide, juste 2 minutes. Puis-je vous poser quelques questions ?",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "barge_in": true,
      "timeout": 15,
      "intent_mapping": {
        "affirm": "question1",
        "question": "freestyle_answer",
        "deny": "bye_failed",
        "*": "bye_failed"
      }
    },
    "freestyle_answer": {
      "audio_type": "freestyle",
      "voice": "julie",
      "barge_in": true,
      "timeout": 10,
      "max_turns": 3,
      "context": {
        "agent_name": "Julie",
        "company": "TechCorp",
        "product": "solution d'automatisation",
        "campaign_context": "Prospection B2B pour solution d'automatisation",
        "campaign_objective": "L'objectif est d'obtenir un rendez-vous avec un expert",
        "agent_tone": "professionnel, courtois, posé, crédible",
        "agent_style": "Phrases claires et structurées. Vouvoiement. Arguments factuels et chiffrés."
      },
      "intent_mapping": {
        "affirm": "question1",
        "question": "freestyle_answer",
        "deny": "objection",
        "*": "question1"
      }
    },
    "question1": {
      "message_text": "Seriez-vous disponible pour une démo gratuite de 15 minutes ?",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "barge_in": true,
      "timeout": 10,
      "qualifying_question": true,
      "intent_mapping": {
        "affirm": "confirm_lead",
        "question": "freestyle_answer",
        "deny": "objection",
        "*": "bye_not_sure"
      }
    },
    "objection": {
      "message_text": "Je comprends votre hésitation. Justement, notre solution est conçue pour être simple et s'adapter à vos contraintes.",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "barge_in": true,
      "timeout": 10,
      "intent_mapping": {
        "affirm": "question1",
        "question": "freestyle_answer",
        "deny": "bye_not_interested",
        "*": "bye_not_sure"
      }
    },
    "confirm_lead": {
      "message_text": "Parfait ! Je vous envoie les informations par email et notre équipe vous recontactera. Merci {{first_name}} et excellente journée !",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "result": "lead",
      "intent_mapping": {
        "*": "end"
      }
    },
    "bye_not_interested": {
      "message_text": "Je comprends. Merci pour votre temps et bonne journée !",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "result": "not_interested",
      "intent_mapping": {
        "*": "end"
      }
    },
    "bye_not_sure": {
      "message_text": "Pas de problème. Je vous laisse mes coordonnées par email si vous changez d'avis. Bonne journée !",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "result": "not_interested",
      "intent_mapping": {
        "*": "end"
      }
    },
    "bye_failed": {
      "message_text": "D'accord. Bonne journée !",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "result": "failed",
      "intent_mapping": {
        "*": "end"
      }
    }
  },
  "qualification_rules": {
    "lead": {
      "required_steps": ["question1"],
      "required_intents": {
        "question1": "affirm"
      }
    }
  }
}
