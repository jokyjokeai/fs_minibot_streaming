<configuration name="modules" description="Modules MiniBotPanel">
  <modules>
    <!-- OBLIGATOIRES pour MiniBotPanel -->
    <load module="mod_event_socket"/>  <!-- ESL pour Python -->
    <load module="mod_sofia"/>         <!-- SIP -->
    <load module="mod_dptools"/>       <!-- Dialplan tools -->
    <load module="mod_commands"/>      <!-- API commands -->
    <load module="mod_dialplan_xml"/>  <!-- XML dialplan -->

    <!-- Codecs audio -->
    <load module="mod_g711"/>          <!-- PCMU/PCMA -->
    <load module="mod_opus"/>          <!-- Opus (optionnel) -->

    <!-- Fichiers audio -->
    <load module="mod_native_file"/>   <!-- Playback fichiers -->
    <load module="mod_sndfile"/>       <!-- Formats audio -->
    <load module="mod_tone_stream"/>   <!-- Génération tons -->

    <!-- OPTIONNELS mais utiles -->
    <load module="mod_shout"/>         <!-- Streaming MP3 -->
    <load module="mod_logfile"/>       <!-- Logs fichiers -->
    <load module="mod_cdr_csv"/>       <!-- CDR CSV -->

    <!-- NE PAS charger (inutiles pour nous) -->
    <!-- <load module="mod_verto"/> -->
