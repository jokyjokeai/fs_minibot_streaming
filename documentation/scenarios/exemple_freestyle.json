{
  "name": "Exemple Freestyle AI",
  "description": "Scénario démo avec mode IA freestyle pour questions hors-script",

  "steps": {
    "intro": {
      "message_text": "Allô, bonjour {{first_name}}. Je suis Julie de TechCorp.",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "barge_in": true,
      "timeout": 15,
      "intent_mapping": {
        "affirm": "pitch",
        "question": "freestyle_answer",
        "deny": "fin_not_interested",
        "*": "freestyle_answer"
      }
    },

    "pitch": {
      "message_text": "Je vous appelle pour vous présenter notre nouvelle solution d'automatisation qui aide les entreprises comme la vôtre à gagner du temps.",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "barge_in": true,
      "timeout": 10,
      "intent_mapping": {
        "affirm": "question1",
        "question": "freestyle_answer",
        "deny": "objection",
        "*": "freestyle_answer"
      }
    },

    "freestyle_answer": {
      "audio_type": "freestyle",
      "voice": "julie",
      "barge_in": true,
      "timeout": 10,
      "max_turns": 3,
      "context": {
        "agent_name": "Julie",
        "company": "TechCorp",
        "product": "solution d'automatisation",
        "campaign_context": "Prospection B2B pour solution d'automatisation"
      },
      "intent_mapping": {
        "affirm": "question1",
        "question": "freestyle_answer",
        "deny": "objection",
        "*": "question1"
      }
    },

    "question1": {
      "message_text": "Est-ce que vous seriez intéressé par une démonstration gratuite de 15 minutes ?",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "barge_in": true,
      "timeout": 10,
      "qualifying_question": true,
      "intent_mapping": {
        "affirm": "fin_lead",
        "question": "freestyle_answer",
        "deny": "objection",
        "*": "fin_not_sure"
      }
    },

    "objection": {
      "message_text": "Je comprends votre hésitation. Justement, notre solution est conçue pour être simple et s'adapter à vos contraintes.",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "barge_in": true,
      "timeout": 10,
      "intent_mapping": {
        "affirm": "question1",
        "question": "freestyle_answer",
        "deny": "fin_not_interested",
        "*": "fin_not_sure"
      }
    },

    "fin_lead": {
      "message_text": "Parfait ! Je vous envoie les informations par email et notre équipe vous recontactera pour fixer le rendez-vous. Merci {{first_name}} et excellente journée !",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "result": "lead",
      "intent_mapping": {
        "*": "end"
      }
    },

    "fin_not_interested": {
      "message_text": "Je comprends. Merci pour votre temps et bonne journée !",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "result": "not_interested",
      "intent_mapping": {
        "*": "end"
      }
    },

    "fin_not_sure": {
      "message_text": "Pas de problème. Je vous laisse mes coordonnées par email si vous changez d'avis. Bonne journée !",
      "audio_type": "tts_cloned",
      "voice": "julie",
      "result": "not_interested",
      "intent_mapping": {
        "*": "end"
      }
    }
  },

  "qualification_rules": {
    "lead": {
      "required_steps": ["question1"],
      "required_intents": {
        "question1": "affirm"
      }
    }
  }
}
